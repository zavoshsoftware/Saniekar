@model Models.Order

@{
		ViewBag.Title = "حذف " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
}

<h2>@ViewBag.Title</h2>

<h3>آیا از لغو این سفارش اطمینان دارید؟</h3>
<div>
	<hr />
	<div class="form-horizontal">

		<div class="form-group">
			@Html.LabelFor(model => model.Code, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.Code)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.CreationDate, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.CreationDate)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.LastModifiedDate, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.LastModifiedDate)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.TotalAmountStr, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.TotalAmountStr)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.PaymentAmountStr, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.PaymentAmountStr)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.User.FullName, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.User.FullName)
			</div>
		</div>

	</div>

	@using (Html.BeginForm())
	{
			@Html.AntiForgeryToken()
			@Html.HiddenFor(model => model.Id)

			<div class="form-group" id="buttons">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="تایید لغو سفارش" class="btn btn-primary" />
					@Html.ActionLink("بازگشت به فهرست", "List")
				</div>
			</div>
	}
</div>
