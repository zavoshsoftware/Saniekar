@model IEnumerable<Models.OrderDetail>
@{
		ViewBag.Title = "لیست تامین";
		Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}
<h2>لیست سفارشات</h2>
@(Html.Kendo().Grid(Model)
		.Name("Grid")
		.Columns(columns =>
		{
		  
		columns.Bound(model => model.Order.Code);
		columns.Bound(model => model.Product.Title);
		columns.Bound(model => model.Mattress.Title);
		columns.Bound(model => model.ProductColor.Title);
			columns.Bound(model => model.AmountStr);

		columns.Bound(model => model.Quantity);
		columns.Bound(model => model.RowAmountStr);
			 
		columns.Bound(item => @item.Id).Title("دستورات").Filterable(false).Groupable(false)
										.Template(@<text>

											@Html.ActionLink("مشاهده سفارش", "Details","Orders", new { id = @item.OrderId }, new { @class = "k-button" })
						 

										           </text>).Width(200);


			
		}).Sortable().Filterable()
						.DataSource(dataSource => dataSource.Server()
										.Model(model => model.Id(item => item.Id))
						)
)
 